<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Act4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Act4.Views.MainTabs"
    Title="Act4">

    <TabBar>
        <ShellContent
            Title="Principales"
            ContentTemplate="{DataTemplate local:MainCharactersPage}"
            Icon="star.png" />

        <ShellContent
            Title="Antagonistas"
            ContentTemplate="{DataTemplate local:AntagonistsPage}"
            Icon="villain.png" />

        <ShellContent
            Title="Secundarios"
            ContentTemplate="{DataTemplate local:SupportingCharactersPage}"
            Icon="people.png" />
    </TabBar>

</Shell>